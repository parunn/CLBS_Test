<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">

    <RelativeLayout
        android:id="@+id/relativeMapSearchResultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="2dp"
        android:background="@drawable/map_list_item_background">

        <!-- Text Province Topic -->
        <TextView
            android:id="@+id/txtProvinceTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:padding="8dp"
            android:text="Name :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/clbsPrimaryFontColorDurkBlue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Text Province Name -->
        <TextView
            android:id="@+id/txtProvinceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txtProvinceTopic"
            android:ellipsize="end"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Chiang Mai"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/clbsPrimaryFontColorDurkBlue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Text Stock Content Name -->
        <TextView
            android:id="@+id/txtDistanceFromUserTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProvinceTopic"
            android:layout_gravity="right"
            android:layout_marginStart="10dp"
            android:gravity="left"
            android:padding="8dp"
            android:text="Distance :"
            android:textColor="@color/clbsPrimaryFontColorDustBlue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDistanceFromUserUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProvinceTopic"
            android:layout_toEndOf="@+id/txtDistanceFromUserTopic"
            android:padding="8dp"
            android:text="Distance"
            android:textColor="@color/clbsPrimaryFontColorDustBlue"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>









